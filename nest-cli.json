{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src/modules",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "modules/mail/templates/**/*",
        "watchAssets": true
      },
      {
        "include": "database/seeds/data/**/*",
        "watchAssets": true
      }
    ]
  }
}
